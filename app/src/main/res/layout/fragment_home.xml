<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/size16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Categories"
        android:gravity="center"
        android:textSize="@dimen/textsize28sp"
        android:textColor="@color/yellow"
        android:textStyle="bold"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size24dp"
        android:layout_marginRight="@dimen/size8dp"
        android:layout_marginLeft="@dimen/size8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/categoryOne"
            android:padding="@dimen/size8dp">

            <com.gosemathraj.thejoke.CustomIcons
                android:layout_width="@dimen/boxHeight"
                android:layout_height="@dimen/boxHeight"
                android:text="@string/pointerIcon"
                android:textSize="@dimen/textsize48sp"
                android:gravity="center"
                android:textColor="@color/redLight"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classic One Liners"
                android:textSize="@dimen/textsize18sp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/categoryTwo"
            android:padding="@dimen/size8dp">

            <com.gosemathraj.thejoke.CustomIcons
                android:layout_width="@dimen/boxHeight"
                android:layout_height="@dimen/boxHeight"
                android:text="@string/pointerIcon"
                android:textSize="@dimen/textsize48sp"
                android:gravity="center"
                android:textColor="@color/purpleLight"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Funny Jokes"
                android:textSize="@dimen/textsize18sp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/categoryThree"
            android:padding="@dimen/size8dp">

            <com.gosemathraj.thejoke.CustomIcons
                android:layout_width="@dimen/boxHeight"
                android:layout_height="@dimen/boxHeight"
                android:text="@string/pointerIcon"
                android:textSize="@dimen/textsize48sp"
                android:gravity="center"
                android:textColor="@color/darkBrown"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Husband and Wife"
                android:textSize="@dimen/textsize18sp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/categoryFour"
            android:padding="@dimen/size8dp">

            <com.gosemathraj.thejoke.CustomIcons
                android:layout_width="@dimen/boxHeight"
                android:layout_height="@dimen/boxHeight"
                android:text="@string/pointerIcon"
                android:textSize="@dimen/textsize48sp"
                android:gravity="center"
                android:textColor="@color/safronLight"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teachers Special"
                android:textSize="@dimen/textsize18sp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/size8dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/categoryFive"
            android:padding="@dimen/size8dp">

            <com.gosemathraj.thejoke.CustomIcons
                android:layout_width="@dimen/boxHeight"
                android:layout_height="@dimen/boxHeight"
                android:text="@string/pointerIcon"
                android:textSize="@dimen/textsize48sp"
                android:gravity="center"
                android:textColor="@color/pinkLight"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Feel The Insult"
                android:textSize="@dimen/textsize18sp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size24dp"
        android:layout_marginRight="@dimen/size8dp"
        android:layout_marginLeft="@dimen/size8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/categorySix"
            android:padding="@dimen/size8dp">

            <com.gosemathraj.thejoke.CustomIcons
                android:layout_width="@dimen/boxHeight"
                android:layout_height="@dimen/boxHeight"
                android:text="@string/pointerIcon"
                android:textSize="@dimen/textsize48sp"
                android:gravity="center"
                android:textColor="@color/redLight"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Santa Banta Jokes"
                android:textSize="@dimen/textsize18sp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size24dp"
        android:layout_marginRight="@dimen/size8dp"
        android:layout_marginLeft="@dimen/size8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/categorySeven"
            android:padding="@dimen/size8dp">

            <com.gosemathraj.thejoke.CustomIcons
                android:layout_width="@dimen/boxHeight"
                android:layout_height="@dimen/boxHeight"
                android:text="@string/pointerIcon"
                android:textSize="@dimen/textsize48sp"
                android:gravity="center"
                android:textColor="@color/redLight"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Doctors Special"
                android:textSize="@dimen/textsize18sp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

</ScrollView>